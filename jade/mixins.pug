mixin dev_head(page_title, og_img)
    head
        title= page_title
        | <!-- saved from url=(0014)about:internet -->
        meta(charset='utf-8')
        meta(name='viewport', content="width=device-width, initial-scale=1.0")
        meta(name='description', content="Фломни позволяет быстро, недорого,с гарантией и уникальными дополнительными сервисами обработать ваши заказы. Клиенты будут довольны!")
        meta(name="SKYPE_TOOLBAR", content="SKYPE_TOOLBAR_PARSER_COMPATIBLE")
        meta(name="apple-mobile-web-app-capable", content="yes")
        meta(name="format-detection", content="telephone=no")
        
        meta(property="og:title" content= page_title)
        - if (og_img)
            meta(property="og:img" content= og_img)

        link(href='https://fonts.googleapis.com/css?family=PT+Sans&amp;subset=cyrillic', rel='stylesheet')
        link(rel='stylesheet', href='styles/main_global.css', media='all')
        
        
        


mixin loop_while(counter)
    -i=0;
    while i < counter
        -i++;
        block
        
        
mixin popups()
    #callback_popup.popup.popup_v3(style='display:none;')
        .popup_inner
            .caption_v1 Обратный звонок
            form.validateMe(action='#' method='POST')
                .form_cell
                    label(for='callback_name') Имя
                    .input_w: input#callback_name.f_input.input_v2(placeholder='Email' name='callback_name' class='validate[required, minSize[2]]')
                .form_cell
                    label(for='callback_phone') Телефон
                    .input_w: input#callback_phone.f_input.input_v2(placeholder='Email' name='callback_phone' class='validate[required]' data-inputmask="'mask': '[+7] (999) 999 99 99', 'clearIncomplete' : true")
                    
                .form_cell
                    .form_label &nbsp;
                    .input_w.text_center
                        button.btn_v1.blue_btn.order_btn.mod_2
                            span Заказать
                            
